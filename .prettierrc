{
  "printWidth": 80,
  "tabWidth": 4,
  "useTabs": true,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": false,
  "jsxBracketSameLine": true,
  "arrowParens": "always",
  "proseWrap": "always",
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
        "files": "*.css",
        "options": {
            "tabWidth": 4
        }
    },
    {
        "files": "*.json",
        "options": {
            "tabWidth": 2,
            "useTabs": false
        }
    }
  ]
}